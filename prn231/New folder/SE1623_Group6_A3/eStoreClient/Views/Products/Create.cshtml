@model eStoreClient.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<script src="~/js/javascrip.js"></script>
<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" id="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" id="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" id="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" id="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitInStock" class="control-label"></label>
                <input asp-for="UnitInStock" id="UnitInStock" class="form-control" />
                <span asp-validation-for="UnitInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
            <input type="submit" value="Create" id="AddButton" class="btn btn-primary" />
            </div>
      
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script type="text/javascript">
    $(document).ready(function () {


        $("#AddButton").click(function (e) {
            var xhttp = new XMLHttpRequest();
            xhttp.open("POST", "https://localhost:7063/Product/Product/", true);
            xhttp.setRequestHeader("Content-type", "application/json");
            var obj = {

                CategoryId: document.getElementById("CategoryId").value,
                ProductName: document.getElementById("ProductName").value,
                Weight: document.getElementById("Weight").value,
                UnitPrice: document.getElementById("UnitPrice").value,
                UnitInStock: document.getElementById("UnitInStock").value,


            };
            console.log(JSON.stringify(obj));
            alert("Success");
            xhttp.send(JSON.stringify(obj));

            window.location = "https://localhost:7000/Products";
        });


    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
