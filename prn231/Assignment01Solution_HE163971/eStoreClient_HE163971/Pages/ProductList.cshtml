@model ProductListModel
@{
}

<h1>Index</h1>
<p>
    <form method="get">
        <input name="search" type="text"/>
        <input type="submit" value="Search" />
    </form>
</p>
<a href="/Productcreate">Create new</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("ProductId")
            </th>
            <th>
                @Html.DisplayName("CategoryId")
            </th>
            <th>
                @Html.DisplayName("ProductName")
            </th>
            <th>
                @Html.DisplayName("Weight")
            </th>
            <th>
                @Html.DisplayName("UnitsInStock")
            </th>
            <th>
                @Html.DisplayName("UnitPrice")
            </th>
            <th> Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listProduct)
        {
            <tr>
            </tr>
        <td>
                @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
                @Html.DisplayFor(modelItem => item. ProductName)
        </td>
        <td>

                @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>

                @Html.DisplayFor(modelItem => item.UnitsInStock)
        </td>
        <td>
                
                @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            <a asp-page="./ProductUpdate"
               asp-page-handler="Delete" asp-route-id="@item.ProductId">Update</a>|
            <a asp-page="./Productlist"
               onclick="return confirm('Are you sure you want to delete this item?');"
               asp-page-handler="Delete" asp-route-id="@item.ProductId">Delete</a>
        </td>
        }
    </tbody>
</table>